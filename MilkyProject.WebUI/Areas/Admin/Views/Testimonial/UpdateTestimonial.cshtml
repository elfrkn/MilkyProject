@model MilkyProject.WebUI.DTOs.Testimonial.UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Referans Güncelle</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                    <tbody>
                        <form method="post">
                            <div class="container">
                                <br /><br />
                                <input type="hidden" asp-for="TestimonialID" />
                                <label>Resim Yolu</label>
                                <input type="text" asp-for="ImageUrl"   class="form-control" />
                                <br />
                                <label>Ad Soyad</label>
                                <input type="text" asp-for="Name" class="form-control" />
                                <br />
                                <label>Açıklama</label>
                                <textarea rows="10" class="form-control" asp-for="Description"></textarea>
                                <br />
                                <button type="submit" class="btn btn-primary">Referans Güncelle</button>
                                <br /><br />
                            </div>
                        </form>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

