@model List<MilkyProject.WebUI.DTOs.SocialMedia.ResultSocialMediaDto>
@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Sosyal Medya Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Sosyal Medya Ad</th>
                            <th scope="col">Sosyal Medya Link</th>
                            <th scope="col">Sosyal Medya Ikon</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Url</td>
                                <td>@item.Icon</td>


                                <td><a href="/Admin/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-warning">Sil</a></td>
                                <td><a href="/Admin/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Admin/SocialMedia/CreateSocialMedia" class="btn btn-success">Yeni Sosyal Medya Ekle</a>
                <br />

            </div>
        </div>
    </div>
</div>