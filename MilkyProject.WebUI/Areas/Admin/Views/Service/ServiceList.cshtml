@model List<MilkyProject.WebUI.DTOs.Service.ResultServiceDto>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Hizmetler</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Resim</th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@item.SmallImageUrl">
                                        </a>
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@item.ImageUrl">
                                        </a>
                                    </div>
                                </th>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Description.Substring(0,30)
                                </td>

                                <td><a href="/Admin/Service/DeleteService/@item.ServiceID" class="btn btn-warning">Sil</a></td>
                                <td><a href="/Admin/Service/UpdateService/@item.ServiceID" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <br />
        <td><a href="/Admin/Slider/CreateSlider/" class="btn btn-primary">Yeni Hizmet Girişi</a></td>
        <br />
    </div>
</div>