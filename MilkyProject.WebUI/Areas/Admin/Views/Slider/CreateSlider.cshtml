@model MilkyProject.WebUI.DTOs.Slider.CreateSliderDto
@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Slider Ekleme</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                    <tbody>
                        <form method="post">
                            <div class="container">
                                <br /><br />
                                <label>Resim Yolu</label>
                                <input type="text" name="ImageUrl" class="form-control" />
                                <br />
                                <label>Başlık</label>
                                <input type="text" name="Description1" class="form-control" />
                                <br />
                                <label>Açıklama</label>
                                <input type="text" name="Description2" class="form-control" />
                                <br />
                                <button type="submit" class="btn btn-primary">Slider Ekle</button>
                                <br /><br />
                            </div>
                        </form>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

