@model MilkyProject.WebUI.DTOs.Category.CreateCategoryDto

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Kategoriler</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                    </thead>
                    <tbody>
                        <form method="post">
                            <div class="container">
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Kategori Adı</label>
                                    <input type="text" asp-for="CategoryName" class="form-control">
                            </div>
                                <div class="form-group">
                                    <label for="exampleFormControlInput1">Kategori Resim Yolu</label>
                                    <input type="text" asp-for="ImageUrl"  class="form-control">
                                </div>
                                <button class="btn btn-primary">Kategoriyi Ekle</button>
                           </div>
                            <br />
                        </form>
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
</div>

